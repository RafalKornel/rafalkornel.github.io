---
import { LINKS } from "@config";
import { cn } from "@lib/utils";

const { pathname } = Astro.url;
const subpath = pathname.match(/[^/]+/g);
---

<nav class="hidden md:flex items-center justify-center text-sm gap-4">
  {
    LINKS.map((LINK) => (
      <a
        href={LINK.HREF}
        class={cn(
          "h-8 rounded-full px-4 text-current font-bold",
          "flex items-center justify-center",
          "transition-colors duration-300 ease-in-out",
          pathname === LINK.HREF || "/" + subpath?.[0] === LINK.HREF
            ? "bg-main dark:bg-accent text-white dark:text-black"
            : "hover:bg-main/5 dark:hover:bg-white/20 hover:text-black dark:hover:text-white"
        )}
      >
        {LINK.TEXT}
      </a>
    ))
  }
</nav>
