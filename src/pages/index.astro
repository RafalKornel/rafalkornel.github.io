---
import Avatar from "@/components/Avatar/Avatar.astro";
import BaseLayout from "@/layout/BaseLayout.astro";
---

<BaseLayout title="Rafał Kornel">
  <div class="flex flex-col lg:flex-row gap-10 lg:gap-20 xl:px-60">
    <Avatar variant="large" class="flex-[2]" />

    <section class="flex-[3] flex flex-col m-auto">
      <p>Hello!</p>
      <h2>
        I'm <span class="text-accent" transition:name="name">Rafał Kornel</span>
      </h2>
      <h2>and I build <span class="text-accent">Web</span> 🌍</h2>
    </section>
  </div>
</BaseLayout>
